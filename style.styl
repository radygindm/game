@import "nib";
@import "rupture";
body
  font-family Arial, sans-serif
  background lightskyblue
.main
  width 100%
  height 100%
  padding-top 120px
h2
  font-size 40px
  line-height 48px
  color darkblue
.fields
  margin-bottom 24px
  display flex
  flex-direction column
.field
  margin 12px
  label
    font-size 32px
    line-height 40px
    margin-right 4px
  input
    height 40px
    font-size 32px
    border 1px solid darkblue
.button
  height 56px
  padding 0 24px
  font-size 24px
  background darkblue
  color white
  border none
  border-radius 4px
  transition .1s ease
  &:hover
    cursor pointer
    transform scale(1.02)
    background lightslategrey
table
  border-collapse collapse
  margin auto
  tr
    &:before
      content attr(data-name)
      font-size 24px
      line-height 40px
      margin-right 10px
  th
    font-size 24px
    font-weight normal
  td
    width 40px
    height 40px
    border 2px solid darkblue
    position relative
    background lightblue
    transition .3s ease
    &:hover
      background lightskyblue
      cursor pointer
    &.hit
      &:before, &:after
        content ''
        width 35px
        height 3px
        background red
        border-radius 1px
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        margin auto
        transform rotate(45deg)
      &:after
        transform rotate(-45deg)
    &.miss
      &:before
        content ''
        background red
        width 10px
        height 10px
        border-radius 50%
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        margin auto
.screen_one
  display none
  &.active
    display flex
    justify-content center
  .fields
    display flex
  .form
    display flex
    align-items center
    flex-direction column
.screen_two
  display none
  &.active
    display flex
    justify-content center
.screen_final
  display none
  &.active
    display flex
    justify-content center
.place
  display none
  &.active
    display block
.name
  font-size 24px